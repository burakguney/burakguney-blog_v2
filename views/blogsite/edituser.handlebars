============================-->
<section class="admin-color md-padding">
</section>

<!--==========================
    Admin Editpost Section
============================-->

<div class="d-flex admin-padding" id="wrapper">

    {{!-- Admin Nav Side Bar --}}

    <div id="page-content-wrapper">

        <div class="container">

            <div class="row">

                <div class="col-md-12">



                    <div class="row text-center mt-5">
                        <div class="col-md-4 offset-md-4">
                            <div class="section-header">
                                <h2 class="title">Hesap Düzenle</h2>
                            </div>
                        </div>
                    </div>
                    <div class="{{type}}" id="sessionMessage">
                        {{message}} <a href="" class="delete-item float-right"><i class="{{type2}}"></i></a>
                    </div>
                    <fieldset {{disabled}}>
                        <form action="/users/edit/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="_method" value="PUT">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="">Kullanıcı Adı</label>
                                        <input class="form-control" name="username" id="username" type="text"
                                            value="{{user.username}}" required="required"
                                            data-validation-required-message="Please enter a title.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <label for="">E-Posta</label>
                                        <input class="form-control" name="email" id="email" type="email"
                                            value="{{user.email}}" required="required"
                                            data-validation-required-message="Please enter a title.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Parola</label>
                                        <input class="form-control" name="password" id="password" type="password"
                                            value="{{user.password}}" required="required"
                                            data-validation-required-message="Please enter a title.">
                                        <p class="help-block text-danger"></p>
                                    </div>

                                </div>
                                <div class="col-md-12 clearfix">* Zorunlu alanları belirtir.</div>
                                <div class="col-md-6 text-center mt-3">
                                    <button type="button" class="btn btn-success btn-block disabled"
                                        id="submitButton">Kaydet</button>
                                </div>
                                <div class="col-md-6 text-center mt-3">
                                    <a href="/"><button type="button" class="btn btn-warning btn-block">Kaydetmeden
                                            çık</button></a>

                                </div>
                            </div>
                        </form>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    CKEDITOR.replace('content');
</script>


<script>

    let username = document.getElementById("username");
    const valUsername = username.value

    let email = document.getElementById("email");
    const valEmail = email.value

    let password = document.getElementById("password");
    const valPassword = password.value

    let submitButton = document.getElementById("submitButton");

    username.addEventListener("change", usernameChange);
    function usernameChange() {
        submitButton.setAttribute("type", "submit")
        submitButton.classList.remove("disabled")
        if (valUsername == username.value) {
            submitButton.setAttribute("type", "button")
            submitButton.classList.add("disabled")
        }
    }


    email.addEventListener("change", emailChange);
    function emailChange() {
        submitButton.setAttribute("type", "submit")
        submitButton.classList.remove("disabled")
        if (valEmail == email.value) {
            submitButton.setAttribute("type", "button")
            submitButton.classList.add("disabled")
        }

    }


    password.addEventListener("change", passwordChange);
    function passwordChange() {
        submitButton.setAttribute("type", "submit")
        submitButton.classList.remove("disabled")
        if (valPassword == password.value) {
            submitButton.setAttribute("type", "button")
            submitButton.classList.add("disabled")
        }

    }



</script>