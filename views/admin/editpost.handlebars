<!--==========================
    Header Section
============================-->
<section class="admin-color md-padding">
</section>

<!--==========================
    Admin Editpost Section
============================-->

<div class="d-flex admin-padding" id="wrapper">

    {{!-- Admin Nav Side Bar --}}
    {{> admin-nav}}

    <div id="page-content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-light bg-lightk border-bottom">
            <button class="btn btn-secondary" id="menu-toggle">Admin Menü</button>
        </nav>

        <div class="container">

            <div class="row">

                <div class="col-md-12">

                    <div class="row text-center mt-5">
                        <div class="col-md-4 offset-md-4">
                            <div class="section-header">
                                <h2 class="title">İçerik Düzenle</h2>
                            </div>
                        </div>
                    </div>


                    {{#if sessionMessage.message}}
                    <div class="{{sessionMessage.type}}" id="sessionMessage">
                        {{sessionMessage.message}} <a href="" class="delete-item float-right"><i
                                class="fa fa-times"></i></a>
                    </div>
                    {{/if}}


                    <form action="/admin/editposts/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input class="form-control" name="title" type="text" value="{{post.title}}"
                                        required="required" data-validation-required-message="Please enter a title.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" id="post-editor" name="content" required="required"
                                        data-validation-required-message="Please enter a content.">{{post.content}}</textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">

                                    <select class="form-control" name="category" id="">
                                        <option value="">Kategori seçiniz</option>
                                        {{#each categories}}
                                        <option value="{{id}}">{{categoryname}}</option>
                                        {{/each}}
                                    </select>

                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <label class="text-dark ml-3" for=""> <b>Görsel Ekle *</b> </label>
                                            <input class="btn bg-light text-dark border btn-block p-2" name="postImage"
                                                id="postImage" type="file" required="required"
                                                onchange="previewPostImage()"
                                                data-validation-required-message="Please enter a title.">
                                        </div>
                                        <div class="col-md-4">
                                            <img style="width:100%;" class="img-fluid rounded" id="postImg" />
                                        </div>
                                    </div>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-12 clearfix">* Zorunlu alanları belirtir.</div>
                            <div class="col-md-4 offset-md-4 text-center mt-3">
                                <button type="submit" class="btn btn-success btn-block">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    CKEDITOR.replace('content');
</script>